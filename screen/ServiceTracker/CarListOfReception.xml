<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.4.xsd"
        default-menu-include="false" standalone="true">
    <transition name="createAdvisor">
        <service-call name="tracker.TrackerServices.create#AdvisorEntry"/>
        <default-response url="../Service"/>
    </transition>
    <actions>
        <service-call name="tracker.TrackerServices.get#ReceptionEntityAndCarStatus" in-map="context"
                      out-map="context"/>
    </actions>
    <widgets>
        <container id="reception-section">
            <container id="reception-title">
                <label text="Car waiting for Service advisor " type="h5"/>
            </container>
            <section-iterate name="CarEntries" list="receptionCarList" entry="reception">
                <widgets>
                    <container>
                        <container-dialog id="Advisor-container" button-text="Advisor">
                            <form-single name="Advisor-form" transition="createAdvisor">
                                <auto-fields-entity entity-name="AdvisorEntry" field-type="edit"/>
                                <field name="CarNo"><default-field><display text="${reception.CarNo}"/></default-field></field>
                                <field name="BeforeRoadTest"><default-field>
                                    <drop-down allow-empty="false" no-current-selected-key="No">
                                        <option key="Yes"/>
                                        <option key="No"/>
                                    </drop-down>
                                </default-field></field>
                                <field name="AfterRoadTest"><default-field>
                                    <drop-down allow-empty="false" no-current-selected-key="No">
                                        <option key="Yes"/>
                                        <option key="No"/>
                                    </drop-down>
                                </default-field></field>
                                <field name="CarStatus">
                                    <default-field title="Status">
                                        <drop-down allow-empty="false" allow-multiple="false">
                                            <entity-options key="${CarStatus}">
                                                <entity-find entity-name="service.tracker.CarStatusType">
                                                </entity-find>
                                            </entity-options>
                                        </drop-down>
                                    </default-field>
                                </field>
                                <field name="CapNumber"><default-field><text-line size="20"/></default-field></field>
                                <field name="advisorSubmitButton"><default-field title="Create"><submit/></default-field></field>
                            </form-single>
                        </container-dialog>
                        <link text="${reception.CarNo}" url="" url-type="plain"/>
                        <label text="${reception.CarStatus}"/>
                    </container>
                </widgets>
            </section-iterate>
        </container>
        <!-- <form-list name="CarList" list="receptionCarList" skip-start="true" skip-end="true">
        <field name="CarNo"><default-field>
        <link text="${wikiSpaceId}" url="wiki/${wikiSpaceId}" url-type="plain"/>
        </default-field></field>
        <field name="Job"><default-field><display/></default-field></field>
        </form-list> -->
    </widgets>
</screen>