<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.4.xsd"
        default-menu-include="false" standalone="true">

    <transition name="dummyTransition">
        <default-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="service.tracker.JobController" list="secondCarListOfController">
            <econditions><econdition field-name="AwaitingTechnician" value="Done"/></econditions>
        </entity-find>
    </actions>

    <widgets>
        <container id="second-controller-section">
            <section-iterate name="car-entries-for-controller" list="secondCarListOfController" entry="secondController">
                <widgets>
                    <container>
                        <!-- TODO: Find a good way to implement Done and add another technician -->
                        <!--TODO: Need to add a comment field for communication between technician and job controller -->
                        <container-dialog id="entry-for-second-controller" button-text="Done">
                            <form-single name="car-entry-at-controller" transition="dummyTransition">
                                <auto-fields-entity entity-name="service.tracker.ReceptionEntity" field-type="edit"/>
                                <field name="submitButton">
                                    <default-field title="Done"><submit/></default-field>
                                </field>
                            </form-single>
                        </container-dialog>
                        <label text="${secondController.CarNo}"/>
                        <label text="${secondController.AwaitingTechnician}"/>
                    </container>
                </widgets>
            </section-iterate>
        </container>
    </widgets>

</screen>