<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.4.xsd"
        default-menu-include="false" standalone="true">

    <transition name="createController">
        <service-call name="tracker.TrackerServices.create#JobController"/>
        <default-response url="../Service"/>
    </transition>

    <actions>
        <service-call name="tracker.TrackerServices.get#AdviserEntryAndCarStatus" in-map="context"
                      out-map="context"/>
    </actions>

    <widgets>
        <container id="controller-section">
            <section-iterate name="controllerEntries" list="jobControllerCarList" entry="controller">
                <widgets>
                    <container>
                        <container-dialog id="job-controller-container" button-text="Controller">
                            <form-single name="job-controller-form" transition="createController">
                                <field name="carNo">
                                    <default-field title="Car No.">
                                        <display text="${controller.carNo}"/>
                                    </default-field>
                                </field>
                                <field name="area">
                                    <default-field title="Area">
                                        <drop-down allow-empty="false" no-current-selected-key="Ground Floor">
                                            <option key="First Floor"/>
                                            <option key="Ground Floor"/>
                                        </drop-down>
                                    </default-field>
                                </field>
                                <field name="bayNo">
                                    <default-field title="Bay No.">
                                        <text-line size="3"/>
                                    </default-field>
                                </field>
                                <field name="technicianId">
                                    <default-field title="Technician Id"><text-line size="5"/></default-field>
                                </field>
                                <field name="jobId"><default-field title="Job Id"><text-line size="4"/></default-field></field>
                                <field name="awaitingTechnician">
                                    <default-field title="Awaiting for Technician"><display text="Yes"/></default-field>
                                </field>
                                <field name="controllerSubmitButton">
                                    <default-field title="Create">
                                        <submit/>
                                    </default-field>
                                </field>
                            </form-single>
                        </container-dialog>
                        <label text="${controller.carNo}"/>
                        <label text="${controller.carStatus}"/>
                    </container>
                </widgets>
            </section-iterate>
        </container>
    </widgets>
</screen>