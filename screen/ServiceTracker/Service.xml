<screen>
    <transition name="receptionCarList">
        <default-response url="../CarListOfReception"/>
    </transition>
    <transition name="adviserCarList">
        <default-response url="../CarListOfAdviser"/>
    </transition>
    <transition name="createSecurityEntry">
        <service-call name="tracker.TrackerServices.create#SecurityCheck"/>
        <default-response url="."/>
    </transition>
    <transition name="securityCarList">
        <default-response url="../SecurityCarList"/>
    </transition>
    <widgets>
        <label type="h3" text="Welcome to the Service Tracker system"/>
        <container>
            <container-dialog id="security-check" button-text="Security Check">
                <form-single name="security-form" transition="createSecurityEntry">
                    <auto-fields-entity entity-name="service.tracker.SecurityCheck" field-type="edit"/>
                    <field name="KmIn">
                        <default-field title="Km In">
                            <text-line size="20"/>
                        </default-field>
                    </field>
                    <field name="InTime">
                        <default-field title="In Time reception">
                            <date-time type="date-time" format="yyyy-MM-dd hh:mm"/>
                        </default-field>
                    </field>
                    <field name="securitySubmitButton">
                        <default-field title="Create">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>
            </container-dialog>
        </container>
