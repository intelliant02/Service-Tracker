<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-1.4.xsd"
        default-menu-include="false" standalone="true">
    <transition name="finishDeliver">
        <default-response url="../Service"/>
    </transition>
    <transition name="doneInvoice">
        <service-call name="tracker.TrackerServices.create#CarInvoice" in-map="context"
                      out-map="context"/>
        <default-response url="../Service"/>
    </transition>
    <actions>
        <service-call name="tracker.TrackerServices.getDelivery#StatusOfCar" in-map="context" out-map="context"/>
    </actions>
    <widgets>
        <container id="delivery-section">
            <section-iterate name="carDeliver" list="deliveryList" entry="deliver">
                <actions>
                    <!--============== Details from Reception ==============-->
                    <entity-find entity-name="service.tracker.ReceptionEntityAndCarStatus" list="lastReceptionList">
                        <econdition field-name="carNo" value="${deliver.carNo}"/>
                        <econdition field-name="carStatus" value="Reception"/>
                    </entity-find>
                    <set field="job" value="${(lastReceptionList.job).last()}"/>
                    <set field="serviceAdviser" value="${(lastReceptionList.serviceAdviser).last()}"/>
                    <set field="gift" value="${(lastReceptionList.gift).last()}"/>
                    <set field="dropCar" value="${(lastReceptionList.dropCar).last()}"/>
                    <!--==============  ==============-->
                    <!--============== Details from Reception ==============-->
                    <entity-find entity-name="service.tracker.AdviserEntryAndCarStatus" list="lastAdviserList">
                        <econdition field-name="carNo" value="${deliver.carNo}"/>
                        <econdition field-name="carStatus" value="Service Adviser"/>
                    </entity-find>
                    <set field="customerName" value="${(lastAdviserList.customerName).last()}"/>
                    <set field="mobileNo" value="${(lastAdviserList.mobileNo).last()}"/>
                    <set field="promisedTime" value="${(lastAdviserList.promisedTime).last()}"/>
                    <!--==============  ==============-->
                </actions>
                <widgets>
                    <container>
                        <container-dialog id="invoice-delivery" button-text="Done">
                            <label type="h1" text="Details of car ${deliver.carNo}"/>
                            <form-single name="invoice-form" transition="doneInvoice">

                                <field name="job">
                                    <default-field title="Job:">
                                        <display text="${job}"/>
                                    </default-field>
                                </field>
                                <field name="serviceAdviser">
                                    <default-field title="Service Adviser">
                                        <display text="${serviceAdviser}"/>
                                    </default-field>
                                </field>
                                <field name="gift">
                                    <default-field title="Gift">
                                        <display text="${gift}"/>
                                    </default-field>
                                </field>
                                <field name="dropCar">
                                    <default-field title="Drop Car">
                                        <display text="${dropCar}"/>
                                    </default-field>
                                </field>
                                <field name="customerName">
                                    <default-field title="CustomerName">
                                        <display text="${customerName}"/>
                                    </default-field>
                                </field>
                                <field name="mobileNo">
                                    <default-field title="Mobile No:">
                                        <display text="${mobileNo}"/>
                                    </default-field>
                                </field>
                                <field name="dropCar">
                                    <default-field title="Promised Time">
                                        <display text="${promisedTime}"/>
                                    </default-field>
                                </field>


                                <field name="submitInvoice"> <default-field title="submit"><submit/></default-field></field>
                            </form-single>
                        </container-dialog>
                    </container>
                </widgets>
            </section-iterate>
        </container>
    </widgets>
</screen>